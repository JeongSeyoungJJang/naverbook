<mvc:View 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    controllerName="frontend.controller.Detail">
    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Detail 타이틀 입니다."/>
                </f:heading>
                <f:expandedContent>
                    <Label text="This is a subheading"/>
                </f:expandedContent>
                <f:snappedContent>
                    <Label text="This is a subheading11"/>
                </f:snappedContent>                
                <f:content>
                    <Title text="Detail 콘텐츠입니다." />
                </f:content>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <layout:HorizontalLayout allowWrapping="true">
                   <Image src="{/image}" class="imagecss sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom" />
                   <Image src="{/image}" class="imagecss sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom" />
                   <!-- <Text text="테스트" /> -->
                </layout:HorizontalLayout>
                <layout:HorizontalLayout allowWrapping="true">
                    <Image src="{/image}" class="imagecss sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom" />
                </layout:HorizontalLayout>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <layout:HorizontalLayout>
                <!-- <core:HTML content="{/description}"/> -->
                <FormattedText htmlText="{/description}"/>
            </layout:HorizontalLayout>
        </f:content>
    </f:DynamicPage>
</mvc:View>